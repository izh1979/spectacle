#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

SHELL=/bin/bash
# This refers to not existing python versions.
PYDEF=$(shell pyversions -d)
PYVERS=$(shell pyversions -r)

build: build-stamp
build-stamp: $(PYVERS:%=build-ext-%)
	touch $@

build-ext-%:
	dh_testdir
	dh build
	touch $@

clean:
	dh_testdir
	python setup.py clean
	rm -rf build-stamp build
	dh_clean

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:        
	python setup.py install --root $(CURDIR)/debian/spectacle --prefix /usr --install-layout=deb
	DESTDIR=$(CURDIR)/debian/spectacle make install-data

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb
#	dh_pycentral

binary-indep: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
